config section 'capture'
	option iface 'mon0'
	option ignoreap '1'
	option ignoredata '1'
	option hash_bssid '0'
	option timeout '0'
	option capsize '256'
  option wait_ntp '1'
  option hash_mac '1'
  option hash_ssid '0'
  option hash_init ''
  option priority '0'
  option promiscuous '1'

config section 'transmit'
	option endpoint 'tcp://127.0.0.1:10070'
  option is_bound '0'

config section 'meta'
  option status_file_name '/tmp/snow_status'
